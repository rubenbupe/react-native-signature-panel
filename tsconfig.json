{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"jsx": "react-native",
		"lib": ["es6", "dom", "es2017"],
		"target": "es5",
		"strictNullChecks": false,
		"declaration": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"outDir": "./lib",
		"strict": false,
    "noEmitOnError": false
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/__tests__/*"]
}
